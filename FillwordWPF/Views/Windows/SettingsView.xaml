<UserControl x:Class="FillwordWPF.Views.Windows.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FillwordWPF.Views.Windows"
              xmlns:vm="clr-namespace:FillwordWPF.ViewModels"
                 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:GameSettingsViewModel/>
    </UserControl.DataContext>
    <Grid Background="Wheat">
        <Grid Margin="300, 0">
            <DockPanel>
                <Grid DockPanel.Dock="Top" Margin="0, 35"/>
                <Grid DockPanel.Dock="Bottom" Margin="0, 35"/>
                <TextBox DockPanel.Dock="Top" Text="{Binding Difficulty}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="36"/>
                <TextBox DockPanel.Dock="Bottom" Text="{Binding SaveDataFileName}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="36"/>
                <TextBox DockPanel.Dock="Bottom" Text="{Binding MinWordLength}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="36"/>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
