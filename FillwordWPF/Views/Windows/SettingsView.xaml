<UserControl x:Class="FillwordWPF.Views.Windows.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FillwordWPF.Views.Windows"
              xmlns:vm="clr-namespace:FillwordWPF.ViewModels"
                 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:GameSettingsViewModel/>
    </UserControl.DataContext>
    <Grid Background="Wheat">
        <TextBlock Text="{Binding Difficulty}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="36"/>
    </Grid>
</UserControl>
